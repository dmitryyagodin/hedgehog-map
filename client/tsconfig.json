{
  "compilerOptions": {
    "lib": ["DOM", "ES2019"],
    "target": "ES2020",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@client/*": ["src/*"],
      "@shared/*": ["node_modules/@ubigu/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
